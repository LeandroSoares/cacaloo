# Arquivo de exemplo para variáveis de ambiente Docker
# Copie este arquivo para .env.docker e ajuste as senhas

# Banco de dados
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=cacaloo
MYSQL_USER=cacaloo_user
MYSQL_PASSWORD=your_secure_password_here

# Aplicação
APP_ENV=local
APP_DEBUG=true
APP_KEY=

# Banco
DB_CONNECTION=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=cacaloo
DB_USERNAME=cacaloo_user
DB_PASSWORD=your_secure_password_here

# Email
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@cacaloo.local
MAIL_FROM_NAME=Cacaloo

# Cache e Sessão
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

SYSADMIN_PASSWORD="cacaloo@admin123"